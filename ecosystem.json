{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  apps : [
    {
      name      : "PRM archive",
      script    : "server.js",
      append_env_to_name: true,
      env: {
        COMMON_VARIABLE: "true"
      },
      env_production : {
        NODE_ENV: "production",
        PORT: 5000
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  deploy: {
    production : {
      user : "d4s",
      host : "138.68.98.81",
      ref  : "origin/master",
      repo : "git@github.com:archivist/prm.git",
      path : "/home/d4s/prm/production",
      "post-deploy": "npm install && cp ../../production.json ./config && export NODE_ENV=production && node make && pm2 startOrRestart ../../ecosystem.json --env production",
      env: {
        NODE_ENV: "production"
      }
    }
  }
}
